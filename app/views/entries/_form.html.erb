<%= simple_form_for(@entry) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :url %>
    <%= f.input :notes %>
    <%= f.input :private %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
